<tr class="text-gray-700">
  <%= th_for_body(link_to(loan.customer.full_name, customer_path(loan.customer), class: 'text-blue-500 hover:text-blue-700 underline', data: { turbo: false })) %>
  <%= th_for_body(link_to(loan.item.name, item_path(loan.item), class: 'text-blue-500 hover:text-blue-700 underline', data: { turbo: false })) %>
  <%= th_for_body(number_to_currency(loan.principal)) %>
  <%= th_for_body(loan.interest_rate) %>
  <%= th_for_body(format_date(loan.maturity_date)) %>
  <%= th_for_body(try(:format_date, loan.default_date)) %>
  <%= th_for_body(link_to('Edit', edit_loan_path(loan), class: 'text-yellow-500 hover:text-yellow-700 underline', data: { turbo: false })) %>
  <th class="border px-4 py-2">
    <%= render(ButtonToComponent.new(color: 'red', link: loan_path(loan), method: :delete, data_attrs: { confirm: 'Are you sure?', turbo: false }, options: { classes: 'px-2 py-2' })) do %>
      Delete
    <% end %>
  </th>
</tr>
