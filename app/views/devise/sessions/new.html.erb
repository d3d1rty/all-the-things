<%= render(CardComponent.new) do |c| %>
  <% c.body do %>
    <h2 class="dark:text-white text-center text-4xl">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render(FormGroupComponent.new(form: f, field: :email, errors: resource.errors)) do |c| %>
        <%= c.label 'Email' %>
        <%= c.text html_options: { type: 'email', autofocus: true, autocomplete: 'email' } %>
      <% end %>

      <%= render(FormGroupComponent.new(form: f, field: :password, errors: resource.errors)) do |c| %>
        <%= c.label 'Password' %>
        <%= c.text html_options: { type: 'password', autofocus: true, autocomplete: 'current-password' } %>
      <% end %>

      <% if devise_mapping.rememberable? %>
        <div class="m-2 p-2">
          <%= f.check_box :remember_me, class: 'appearance-none leading-loose transition-colors hover:border-gray-400 focus:border-blue-500 rounded my-2' %>
          <%= f.label :remember_me, class: 'dark:text-white' %>
        </div>
      <% end %>

      <%= tag.div class: 'text-center mt-6' do %>
        <%= render(ButtonTagComponent.new(color: 'blue', type: :submit, options: { data: { turbo: false } })) do %>
            Log in
        <% end %>
      <% end %>
    <% end %>

    <%= render 'devise/shared/links' %>
  <% end %>
<% end %>
