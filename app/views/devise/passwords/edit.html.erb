<%= render(CardComponent.new) do |c| %>
  <% c.body do %>
    <h2 class="dark:text-white text-center text-4xl">Change Password</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put}, data: { turbo: false }) do |f| %>
      <%= f.hidden_field :reset_password_token %>
      <%= render(FormGroupComponent.new(form: f, field: :password, errors: resource.errors)) do |c| %>
        <%= c.label 'New Password' %>
        <%= c.text html_options: { type: 'password', autofocus: true, autocomplete: 'new-password' } %>
        <small>(<%= @minimum_password_length %> characters minimum)</small>
      <% end %>

      <%= render(FormGroupComponent.new(form: f, field: :password, errors: resource.errors)) do |c| %>
        <%= c.label 'Confirm Password' %>
        <%= c.text html_options: { type: 'password', autofocus: true, autocomplete: 'new-password' } %>
      <% end %>

      <%= tag.div class: 'text-center mt-6' do %>
        <%= render(ButtonTagComponent.new(color: 'blue', type: :submit, options: { classes: 'test' })) do %>
            Change Password
        <% end %>
      <% end %>

      <%= render 'devise/shared/links' %>
    <% end %>
  <% end %>
<% end %>
