<%= render(CardComponent.new) do |c| %>
  <% c.body do %>
    <h2 class="dark:text-white text-center text-4xl">Reset Password</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, data: { turbo: false }) do |f| %>
      <%= render(FormGroupComponent.new(form: f, field: :email, errors: resource.errors)) do |c| %>
        <%= c.label 'Email' %>
        <%= c.text html_options: { type: 'email', autofocus: true, autocomplete: 'email' } %>
      <% end %>

      <%= tag.div class: 'text-center mt-6' do %>
        <%= render(ButtonTagComponent.new(color: 'blue', type: :submit, options: { classes: 'test' })) do %>
            Reset Password
        <% end %>
      <% end %>

      <%= render 'devise/shared/links' %>
    <% end %>
  <% end %>
<% end %>
