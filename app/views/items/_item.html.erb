<div id="<%= dom_id item %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= item.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Sku:</strong>
    <%= item.sku %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Price:</strong>
    <%= item.price %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Cost:</strong>
    <%= item.cost %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Pawned:</strong>
    <%= item.pawned %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Released at:</strong>
    <%= item.released_at %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Stocked at:</strong>
    <%= item.stocked_at %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Sold at:</strong>
    <%= item.sold_at %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= item.description %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this item", item, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this item', edit_item_path(item), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
